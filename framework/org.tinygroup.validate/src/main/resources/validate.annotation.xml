<annotation-class-matchers>
	<annotation-class-matcher class-name=".*" annotation-id="validate"
		annotation-type="org\.tinygroup\.validate\.annotation\.Validation">
	
	<annotation-property-matchers>
			<annotation-property-matcher
				property-name=".*" annotation-type="org\.tinygroup\.validate\.annotation\.Field">
				<processor-beans>
					<processor-bean enable="true" name="validatorFieldAnnotaionAction">
					</processor-bean>
				</processor-beans>
			</annotation-property-matcher>
			<annotation-property-matcher
				property-name=".*" annotation-type=".*">
				<processor-beans>
					<processor-bean enable="true" name="validatorClassFieldAction">
					</processor-bean>
				</processor-beans>
			</annotation-property-matcher>
		</annotation-property-matchers>
	</annotation-class-matcher>
</annotation-class-matchers>