			<ref id="application" />
		</property>
	</bean>
	<bean id="velocityHelper" scope="singleton"
		class="org.tinygroup.velocity.impl.VelocityHelperImpl">
		<property name="fullContextFileRepository">
			<ref id="fullContextFileRepository" />
		</property>
	</bean>
